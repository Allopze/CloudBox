{
  "name": "cloudbox",
  "version": "1.0.0",
  "description": "CloudBox - Cloud Storage Platform",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "predev": "npm run db:generate",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:worker\"",
    "dev:all": "npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:worker": "cd backend && npm run worker:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build",
    "install:all": "npm install",
    "test:backend": "cd backend && npm test",
    "test:backend:integration": "cd backend && npm run test:integration",
    "db:generate": "cd backend && npm run db:generate",
    "db:push": "cd backend && npm run db:push",
    "db:seed": "cd backend && npx tsx src/prisma/seed.ts",
    "db:studio": "cd backend && node ./scripts/prisma-with-env.cjs studio",
    "setup": "npm install && npm run db:generate && npm run db:push && npm run db:seed",
    "release": "node scripts/release.js",
    "release:win64": "node scripts/release.js --platform=win64",
    "release:linux64": "node scripts/release.js --platform=linux64",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "start:worker": "cd backend && npm run worker:prod",
    "start:frontend": "cd frontend && npm run serve",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:deploy": "cd backend && node ./scripts/prisma-with-env.cjs migrate deploy"
  },
  "devDependencies": {
    "archiver": "^7.0.1",
    "concurrently": "^9.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
