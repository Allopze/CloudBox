# CloudBox Frontend - Caddy Configuration
# Serves the React SPA and proxies API requests to backend

:5000 {
    # Logging
    log {
        output stdout
        format console
    }
    
    # Security headers (applied to all responses)
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        Content-Security-Policy "default-src 'self'; script-src 'self' https://static.cloudflareinsights.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: blob: https:; media-src 'self' blob: data: https:; connect-src 'self' https://accounts.google.com https://cloudflareinsights.com https: wss:; frame-ancestors 'self'; base-uri 'self'; form-action 'self';"
    }
    
    # API proxy to backend - MUST be before file_server
    @api path /api/*
    handle @api {
        reverse_proxy backend:3001 {
            transport http {
                response_header_timeout 3600s
                read_timeout 3600s
                write_timeout 3600s
            }
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            # Pass through original headers from Cloudflare
            header_up X-Forwarded-Proto {header.X-Forwarded-Proto}
            header_up X-Forwarded-Host {header.Host}
        }
    }
    
    # Socket.IO proxy
    @socketio path /socket.io/*
    handle @socketio {
        reverse_proxy backend:3001 {
            header_up Connection {header.Connection}
            header_up Upgrade {header.Upgrade}
            header_up X-Forwarded-Proto {header.X-Forwarded-Proto}
            header_up X-Forwarded-Host {header.Host}
        }
    }
    
    # Health check endpoint
    handle /health {
        respond "OK" 200
    }
    
    # Static files and SPA fallback - handles everything else
    handle {
        root * /srv
        encode gzip
        
        # Cache static assets
        @static path *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
        header @static Cache-Control "public, max-age=31536000, immutable"
        
        # Try to serve file, fallback to index.html for SPA routing
        try_files {path} /index.html
        file_server
    }
}
